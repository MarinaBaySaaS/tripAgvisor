<div id="portal-switch-programs"><%= form_tag program_view_path(), :method => :get, :id => "portal-switch-programs-form" do %><select name="program_id"><option value=0 disabled selected>--View Another Program--</option>
                <% @programs.each do |program| %>
                    <% if program.id != @program.id then %>
                       <option value="<%= program.id %>"><%= program.name %></option>
                    <%end%>
                <% end %>
            </select><%end%></div>
<div id="portal-header"><%= @program.name %></div>
<div id="flex-container">
 <div id="column1" class="flex-item">
     <div class="portal-column-title">Tips <%= if session[:user] then link_to '+ Add', new_tip_path; end %>
         <div class="portal-column-title-sort">sort by: <select><option>most helpful</option><option>date</option></select></div>
     </div>
 <% @tips.each do |tip| %>
     <div class="portal-tip"><%= tip.tip %>
         <div class="portal-tip-info"><span class="portal-tip-info-user"><%= tip.user_name %></span> | <span class="portal-tip-info-date"><%= tip.created_at.strftime("%b %-d, '%y") %></span></div>
         <div class="portal-tip-helpful">helpful? <div class="tip-helpful-yes" id="tip-upvote-<%= tip.id %>">U</div> <div class="tip-helpful-no" id="tip-downvote-<%= tip.id %>">D</div></div>
     </div>
 <% end %>
 <% if @tips.size == 0 then %><div class="portal-tips-none">No tips added yet!</div><% end %></div>
 <div id="column2" class="flex-item"><div class="portal-column-title">Reviews</div><div class="portal-review">review 1</div><div class="portal-review">review 2</div><div class="portal-review">review 3</div><div class="portal-review">review 4</div><div class="portal-review">review 5</div><div class="portal-review">review 6</div><div class="portal-review">review 7</div><div class="portal-review">review 8</div></div>
 <div id="column3" class="flex-item"><div class="portal-column-title">Experiences</div><div class="portal-experience">experience 1</div><div class="portal-experience">experience 2</div><div class="portal-experience">experience 3</div></div>
</div>